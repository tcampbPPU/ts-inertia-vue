{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@types/node",
            "@types/ziggy-js"
        ],
        "paths": {
            "@/*": [
                "./resources/js/*",
            ]
        },
        "outDir": "./public/build/assets",
    },
    "typeRoots": [
        "./node_modules/@types",
        "resources/js/types"
    ],
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
